{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "manifest_version": 3,
  "name": "Browser Motion",
  "version": "1.1.0",
  "description": "Vim-style keyboard shortcuts with domain-scoped customizable keybinds",
  "permissions": ["storage", "contextMenus"],
  "background": {
    "service_worker": "src/background/index.ts"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["keybinds.json","icon16.png","icon48.png","icon128.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
